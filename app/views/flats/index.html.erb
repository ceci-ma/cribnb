
  <div class="head">
    <h1><%= "Where would you like to stay?" %></h1>
    <h3><%= "Pick a place to stay anywhere in the world with CriBnB. " %></h3>
  </div>

<div class="search">
  <form class="form-inline md-form form-sm active-cyan-2 mt-2">
    <input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search"
      aria-label="Search">
    <i class="fas fa-search" aria-hidden="true"></i>
  </form>
</div>

<div class="flats_with_map d-flex" >
  <div class="cards border" style="margin: 0 5px 0 10px; min-width: 55%">
    <% @flats.each do |flat| %>
      <div class="card">
        <%= cl_image_tag(flat.photos.first.key, width: 400, height: 300, crop: :fill) if flat.photos.attached? %>
        <div class="card_info">
          <div>
            <h4><%= link_to flat.title, flat_path(flat) %></h4>
            <p><%= flat.location %></p>
          </div>
          <div class="card_price">
            <h4>Â£<%= flat.price %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="map" style="min-width: 45%;">
     <div
      id="map"
      style="width: 100%; height: 100vh; position: sticky; bottom: 0;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>



