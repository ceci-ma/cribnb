<div class="home-banner">
  <div class="form-container m-3 ">
    <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
    <div style="height: 50px;">
      <h2 id="banner-typed-text" style="display:inline; "></h2>
    </div>
      <div class="form-group">
        <%= f.input :location %>
      </div>
      <div class="form-group">
        <%= f.input :guests, collection: [1,2,3,4,5] %>
      </div>
      <%= f.submit "Search cribs", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
