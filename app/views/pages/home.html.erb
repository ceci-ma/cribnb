<div class="home-banner">
  <div class="form-container m-3 ">
    <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
      <h2>Book <span id="banner-typed-text">unique cribs</span> and explore the world.</h2>
      <div class="form-group">
        <%= f.input :location %>
      </div>
      <div class="form-group">
        <%= f.input :guests, collection: [1,2,3,4,5] %>
      </div>
      <%= f.submit "Search cribs", class: "btn btn-ghost" %>
    <% end %>
  </div>
</div>
