<div class="booking-info m-3">
  <div class="form-container m-3 p-4">
    <p><strong>£<%= @flat.price %></strong> per night</p>
    <%= simple_form_for [flat, booking] do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.input :start_date, as: :date, label: "Check-in"%>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :end_date, as: :date, label: "Check-out" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.input :guest, collection: ["1", "2", "3", "4", "5"], label: "Guests" %>
      </div>
      <div class="d-flex justify-content-between border-bottom ">
<!--         <% nights = 5 %>
        <p>£<%= @flat.price %> x <%= nights %> nights </p>
        <p>£ <%= @new_price = @flat.price * nights %></p> -->
        <p>£<%= @flat.price %> per night </p>
      </div>
        <%= f.button :submit, class: "btn btn-ghost" %>
    <% end %>
  </div>
</div>

