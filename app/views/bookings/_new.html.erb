<div class="booking-info m-3">
  <div class="form-container m-3 p-4">
    <h3>Book it now</h3>
    <%= simple_form_for [@flat, @booking] do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.input :start_date, as: :string,label: "Check-in", input_html: { id: "range_start" } %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :end_date, as: :string, label: "Check-out", input_html: { id: "range_end" }  %>
        </div>
      </div>
      <div class="form-group">
        <%= f.input :guest, as: :integer, label: "Guests" %>
      </div>
      <div class="d-flex justify-content-between border-bottom ">
        <p><strong>Â£<%= @flat.price %></strong> per night</p>
      </div>
        <%= f.button :submit, class: "btn btn-ghost" %>
    <% end %>
  </div>
</div>


